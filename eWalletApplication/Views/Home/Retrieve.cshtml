@model IEnumerable<eWalletApplication.Models.Account>

@{
    ViewBag.Title = "Retrieve Account";
    Layout = "~/Views/Shared/_Layout.cshtml";


}


<h2 class="lead">Retrieve Account</h2>
<hr class="shadow my-3"/>

<div class="">

    <table id="retrieve" class="display responsive nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Icon.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in ViewBag.DeletedAccounts)
            {
                <tr>
                    <td>
                        <i class="@item.Icon.Name"> </i>
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Balance
                    </td>
                    <td>
                        <form action="/Home/Retrieve" method="post">
                            <input name="id" value="@item.Id" hidden />
                            <button type="submit" class="btn btn-primary">Retrieve</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>